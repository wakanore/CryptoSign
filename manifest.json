{
    "manifest_version": 2,
    "name": "Crypto QR Generator",
    "version": "1.0",
    "description": "Генератор QR-кодов с зашифрованными данными",
    "icons": {
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    },
    "permissions": [
      "activeTab",
      "storage"
    ],
    "browser_action": {
      "default_icon": "icons/icon-32.png",
      "default_title": "Crypto QR",
      "default_popup": "popup/popup.html"
    },
    "background": {
      "scripts": ["js/background.js"]
    },
    "options_ui": {
      "page": "options/options.html",
      "open_in_tab": false
    },
    "web_accessible_resources": [
      "js/qrcode.js",
      "js/crypto.js"
    ]
  }