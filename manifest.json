{
    "manifest_version": 3,
    "name": "Tracker Blocker",
    "version": "1.0",
    "description": "Блокировка трекерных cookies для защиты приватности",
    "permissions": [
      "cookies",
      "storage",
      "webRequest",
      "webRequestBlocking"
    ],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": {
        "16": "assets/icons/icon16.png",
        "48": "assets/icons/icon16.png",
        "128": "assets/icons/icon16.png"
      }
    },
    "options_page": "options/options.html",
    "icons": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon16.png",
      "128": "assets/icons/icon16.png"
    }
  }